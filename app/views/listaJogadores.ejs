<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <title>Ranking de jogadores</title>
  </head>
  <body>
  <div class="container">
    <h2>Ranking de jogador</h2>
	
	<table class="table table-striped">
      <tr>
		<th>Rank</th>
        <th>Apelido</th>
		<th>ELO Rating</th>
      </tr>
      <%
	  jogadores.sort(function(a,b){return b.ELO - a.ELO})
      for(var i=0; i<jogadores.length; i++){
        var jogador = jogadores[i];
      %>
      <tr>
		<td> <%=i+1%></td>
        <td><%=jogador.apelido%></td>
		<td><%=jogador.ELO%></td>
		<td><a href="/jogador/<%=jogador.apelido%>"> <button class="btn btn-default">Detalhes</button> </a> </td>
      </tr>
      <%
      }
      %>
    </table>
	
	<p><a href="/registroJogador"> <button class="btn btn-default">Registrar jogador</button> </a></p>
	<p><a href="/"> <button class="btn btn-default">Voltar</button> </a></p>
	</div>
  </body>
</html>
